@model Test.Models.Uczen


<form asp-action="Form" method="post" >
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
    <label for="Id">ID:</label>
    <input asp-for="Id" type="text" />
    <span asp-validation-for="Id" class="text-danger"></span> </div>

        <div class="form-group">
    <label for="Name">Imię:</label>
    <input asp-for="Name" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

            <div class="form-group">
    <label for="Ocena">Ocena:</label>
    <select asp-for="Ocena">
        @foreach (var ocena in new int[] { 2, 3, 4, 5 })
        {
            <option value="@ocena">@ocena</option>
        }
    </select>
        <span asp-validation-for="Ocena" class="text-danger"></span>
    </div>

                <div class="form-group">
    <label for="Data">Data:</label>
    <input asp-for="Data" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <button type="submit">Zapisz</button>
</form>
